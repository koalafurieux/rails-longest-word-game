<h1>New Game</h1>

<ul class="list"> <% @new_grid.each do |letter| %>
  <div class="box">
    <li class="letter"><%= letter %></li>
  </div>
  <% end %>
</ul>

<br>

<p>What is the longest word you can find?</p>
<form class="form" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @new_grid %>
  <%= hidden_field_tag :start, @start_time %>
  <input type="text" name="play" placeholder="What is the longest word you can find?">
  <input type="submit">
</form>
